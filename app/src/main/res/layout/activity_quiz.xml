<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.matsu.quizgame.FirstQuizActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="クイズNo."
        android:id="@+id/textNo"
        android:gravity="center_vertical|center_horizontal"
        android:background="#58BE89"
        android:textColor="#FFFFFF"
        android:textSize="26dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ProgressBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/progreaabar"
                android:layout_weight="1"
                android:progressDrawable="@drawable/progressbar"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="right"
                android:textSize="25dp"
                android:id="@+id/textTimer"
                android:layout_weight="1"
                android:text="00:00:00"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="もんだいだよ"
            android:id="@+id/textQuestion"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="46dp"
            android:singleLine="false" />

    </LinearLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="question1"
        android:id="@+id/bt1"
        android:textSize="26dp"
        android:onClick="onClick"
        android:background="@drawable/quiz_button1"
        android:layout_margin="5dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="question2"
        android:id="@+id/bt2"
        android:textSize="26dp"
        android:onClick="onClick"
        android:background="@drawable/quiz_button2"
        android:layout_margin="5dp"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="question3"
        android:id="@+id/bt3"
        android:textSize="26dp"
        android:onClick="onClick"
        android:background="@drawable/quiz_button3"
        android:layout_margin="5dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="question4"
        android:id="@+id/bt4"
        android:textSize="26dp"
        android:onClick="onClick"
        android:background="@drawable/quiz_button4"
        android:layout_margin="10dp"/>

</LinearLayout>